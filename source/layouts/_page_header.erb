<!-- Page Header -->
<header class="masthead" style="background-image: url(<%= image_path current_page.data.header_image || 'home-bg.jpg' %>)">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1><%= current_page.data.title %></h1>
          <span class="subheading"><%= current_page.data.subheading %></span>
        </div>
      </div>
    </div>
  </div>
</header>
