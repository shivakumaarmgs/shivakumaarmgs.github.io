--- 
title: DevLog
subheading: All tech ramblings and few insights.
pageable: true
per_page: 20
---
<% page_articles.group_by {|a| a.date.year }.each do |year, articles| %>
  <% articles.group_by { |a| a.date.month }.each do |month, articles| %>
    <dl class="row">
      <dt class="col-lg-9 col-md-8 col-sm-7">
      <span class="text-muted"><%= articles.first.date.strftime('%B %Y') %></span>
      </dt>
    </dl>
    <% articles.each_with_index do |article, i| %>
      <dl class="row">
        <dt class="col-lg-9 col-md-8 col-sm-7">
        <a class="cust-post-title" href="<%= article.url %>">
          <h3> <%= article.title %> </h3>
        </a>
        </dt>
        <dd class="col-lg-3 col-md-4 col-sm-5">
        <small class="font-italic"><%= article.date.strftime('%B %e, %Y') %></small>
        </dd>
      </dl>
    <% end%>
  <% end %>
<% end %>

<% if paginate && num_pages > 1 %>
  <hr/>
  <div class="row">
    <div class="col-lg-4 col-md-4 col-sm-5 text-center">
      <% if prev_page %>
        <%= link_to 'New Posts', prev_page, class: 'btn btn-primary' %>
      <% end %>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-5 page-number text-center">
      Page <%= page_number %> of <%= num_pages %>
  </div>
  <div class="col-lg-4 col-md-4 col-sm-5 text-center">
    <% if next_page %>
      <%= link_to 'Older Posts', next_page, class: 'btn btn-primary' %>
    <% end %>
  </div>
  </div>
<% end %>
